<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.dais.forza4">

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="it.unive.dais.ingsoftware.forza4.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="it.unive.dais.ingsoftware.forza4.NewGameActivity" />
        <activity android:name="it.unive.dais.ingsoftware.forza4.LoadGameActivity" />
        <activity android:name="it.unive.dais.ingsoftware.forza4.StatisticsActivity" />
        <activity android:name="it.unive.dais.ingsoftware.forza4.OptionsActivity"></activity>
    </application>

</manifest>